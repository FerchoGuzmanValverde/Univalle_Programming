        <TextBox x:Name="txtpresupuesto" HorizontalAlignment="Left" Height="23" Margin="179,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186"/>
        <Button x:Name="btnCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="155,100,0,0" VerticalAlignment="Top" Width="75" Click="btnCalcular_Click"/>
        <Label Content="Urgencias 37% :" HorizontalAlignment="Left" Margin="58,142,0,0" VerticalAlignment="Top" Width="122"/>
        <Label Content="Pediatria 42% :" HorizontalAlignment="Left" Margin="58,182,0,0" VerticalAlignment="Top" Width="122"/>
        <Label Content="Traumatologia 21% :" HorizontalAlignment="Left" Margin="58,222,0,0" VerticalAlignment="Top" Width="122"/>
        <Label x:Name="lblurgencias" Content="" HorizontalAlignment="Left" Margin="227,142,0,0" VerticalAlignment="Top" Width="121"/>
        <Label x:Name="lblpediatria" Content="" HorizontalAlignment="Left" Margin="227,182,0,0" VerticalAlignment="Top" Width="121"/>
        <Label x:Name="lbltraumatologia" Content="" HorizontalAlignment="Left" Margin="227,222,0,0" VerticalAlignment="Top" Width="121"/>

    </Grid>
</Window>

<Window x:Class="EjemploNodo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjemploNodo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtIngresar" HorizontalAlignment="Left" Height="23" Margin="128,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Info:" HorizontalAlignment="Left" Margin="38,22,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.299,0.313"/>
        <Button x:Name="btnañadir" Content="Añadir" HorizontalAlignment="Left" Margin="71,74,0,0" VerticalAlignment="Top" Width="119" Height="47" Click="btnañadir_Click"/>
        <TextBox x:Name="txtLista" HorizontalAlignment="Left" Height="244" Margin="291,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="btnVer" Content="Ver Lista" HorizontalAlignment="Left" Margin="71,141,0,0" VerticalAlignment="Top" Width="119" Height="48" Click="btnVer_Click"/>
        <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="71,209,0,0" VerticalAlignment="Top" Width="119" Height="44" Click="btnEliminar_Click"/>

    </Grid>
</Window>

        <DockPanel HorizontalAlignment="Stretch" Height="100" LastChildFill="False" Margin="0" VerticalAlignment="Top" Width="auto">
            <Menu Name="MenuGeneral" HorizontalAlignment="Stretch" Height="100" VerticalAlignment="Top" Width="auto" DockPanel.Dock="Top">
                <MenuItem Header="_Archivo" Name="MenuArchivo">
                </MenuItem>
                <MenuItem Header="_Disenio" Name="MenuEditar">
                </MenuItem>
                <MenuItem Header="_Formato" Name="MenuHerramientas">
                </MenuItem>
            </Menu>
        </DockPanel>
        <!--No se comprende la segunda instruccion-->
    </Grid>
</Window>
